# Fluent Bit Environment Variables
# Source this file before starting Fluent Bit to set default values
# Usage: source fluent-bit.env && fluent-bit -c fluent-bit.conf

# Loki connection settings
export LOKI_HOST=${LOKI_HOST:-loki}
export LOKI_PORT=${LOKI_PORT:-3100}

# Loki authentication (leave empty if not using auth)
export LOKI_USER=${LOKI_USER:-}
export LOKI_PASSWORD=${LOKI_PASSWORD:-}

# Hostname for labels (defaults to system hostname)
export HOSTNAME=${HOSTNAME:-$(hostname)}
